package com.kembel.farmhand;

public class Row {
	
	private int number;
	private State state;
	
	public Row(int number, State state) {
		this.number = number;
		this.state = state;
	}
	
	public int getNumber() {
		return number;
	}
	
	public State getState() {
		return state;
	}
	
	public int compareTo(Row otherRow) {
		if (this.number < otherRow.getNumber()) {
			return -1;
		} else if (this.number == otherRow.getNumber() ) {
			return 0;
		} else {
			return 1;
		}
	}
}
